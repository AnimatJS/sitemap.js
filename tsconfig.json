{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "module": "CommonJS",
    "target": "ES2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2018"]
  },
  "include": ["index.ts", "cli.ts"],
  "exclude": ["node_modules"]
}
